# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.7/en/server-configuration-defaults.html
# *** DO NOT EDIT THIS FILE. It's a template which will be copied to the
# *** default location during install, and will be replaced if you
# *** upgrade to a newer version of MySQL.

[client]
default-character-set = utf8mb4
socket ={{data_path}}/mysql.sock
[mysql]
default-character-set = utf8mb4
socket ={{data_path}}/mysql.sock
[mysqld]

# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M
# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin

# These are commonly set, remove the # and set as required.
basedir = {{install_path}}
datadir ={{data_path}}/data
port =3306
server_id={{ansible_default_ipv4.address.split(".")[-1]}}
socket ={{data_path}}/mysql.sock
user=mysql

##error-logs
log_error ={{data_path}}/log/error.log 
###binlog
binlog_format=row
log-bin=mysql-bin
log-bin-index=mysql-bin.index
# binlog日志设置保存时间7天
expire_logs_days = 7
# binlog二进制日志默认大小
max_binlog_size = 1G
#死锁打印在错误日志中
innodb_print_all_deadlocks=1 
 
 
#innodb使用内存
innodb_buffer_pool_size = 2G
innodb_buffer_pool_instances = 2
innodb_log_buffer_size = 128M
innodb_log_file_size = 256M
innodb_file_per_table =ON
innodb_open_files=2M
innodb_thread_concurrency=0
innodb_print_all_deadlocks=1
#开启innodb的一表一个文件的设置
innodb_file_per_table = 1
#定时任务机制
event_scheduler = on
max_allowed_packet = 512M

 
 
#连接数
max_connections =1000
# 时区
default_time_zone = "+8:00"
character-set-client-handshake = FALSE
character-set-server = utf8mb4
init_connect='SET NAMES utf8mb4'
# collation-server=utf8mb4_unicode_ci

#log=mysql.log
#开启log-bin日志
log-bin-trust-function-creators=1
#开启事件调度器
event_scheduler=1

#0:区分大小写,1:不区分大小写(默认)
# lower_case_table_names = 1
#即使主库又是从库的要配置
log-slave-updates=1
#连接池超时配置
wait_timeout=31536000
interactive_timeout=31536000
#跳过DNS解析
skip-name-resolve
bind_address=0.0.0.0
# 开启GTID
gtid_mode = on
enforce_gtid_consistency=1

#skip-grant-tables=1
#慢查询开启
slow_query_log=1   
#慢查询时间
long_query_time=0.5 
#存放位置 slow.log需要自己建 用户和组为mysql
slow_query_log_file ={{data_path}}/log/slow.log
#未使用索引的查询也被记录到慢查询日志中
#log_queries_not_using_indexes
#将慢管理语句记入慢查询日志。
log_slow_admin_statements


# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
# join_buffer_size = 128M
# sort_buffer_size = 2M
# read_rnd_buffer_size = 2M 

sql_mode=NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION
